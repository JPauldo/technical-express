<section class="card my-3">
  <header class="card-header">
    <p class="card-header-title title is-4">
      By {{ user.username }}
    </p>
  </header>
  <section class="card-content">
    <p class="content">
      {{ message }}
    </p>
  </section>
  <p class="has-text-right pr-2">
    {{ format_date createdAt }} {{ format_time createdAt }}
  </p>
  {{#if login}}
  <footer class="card-footer">
    <a class="card-footer-item js-modal-trigger" data-target="modal-js-reply" data-message="">Reply</a>
  </footer>
  {{/if}}
</section>
