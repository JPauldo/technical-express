<section class="card my-3">
  <header class="card-header">
    <a class="card-header-title title is-4" 
       href="/post/{{ id }}">
      {{ title }}
    </a>
  </header>
  <section class="card-content">
    <p class="content ">
      {{ message }}
    </p>
  </section>
  <p class="has-text-right pr-2">
    {{ format_date createdAt }} {{ format_time createdAt }}
  </p>
</section>
